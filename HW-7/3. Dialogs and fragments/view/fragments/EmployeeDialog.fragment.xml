<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" >
	<Dialog
		id="EmployeeDialog"
		title="Employee form"
		afterClose="onAfterClose">
		<f:SimpleForm
			maxContainerCols="1"
			layout="ResponsiveGridLayout"
			labelSpanL="12"
			labelSpanM="12"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="1"
			columnsM="1">
			<f:content>
				<Label text="Name"/>
				<Input value="{Name}" placeholder="e.g. Peter" />

				<Label text="Age"/>
				<Input value="{Age}" placeholder="e.g. 18"/>

				<Label text="Type"/>
				<Input value="{Type}" placeholder="e.g. Superhero"/>

				<Label text="Address"/>
				<Input value="{Address}" placeholder="e.g. Minsk"/>
			</f:content>
		</f:SimpleForm>

		<buttons>
			<Button text="Cancel" press="onCancelPress" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>